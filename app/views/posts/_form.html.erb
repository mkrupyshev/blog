<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    Errors: <%= @post.errors.full_messages.join('; ') %>
  <% end %>

  <br/>Title:
  <%= f.text_field :title %>
  <br/>Body:
  <%= f.text_area :body %>
  <%= f.hidden_field :user_id, value: current_user.try(:id) %>

  <br/>
  <%= f.submit (@post.persisted? ? 'Update post' : 'Create post') %>
<% end %>
